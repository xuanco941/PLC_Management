@{
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/Dashboard.css">


<div class="grid_menu">
    <div class="row row_menu">
        <div class="col-12 text-danger" style="font-size:24px; text-align:center; width:100%;" id="message_error_parameter"></div>
        <div class="col-12 text-danger" style="font-size:24px; text-align:center; width:100%;" id="message_error_connect"></div>
        <div class="col-12 col-xl-6 tabLeft">
            <h2 style="text-align: center;">
                Thông số chất lượng
            </h2>
            <form method="get" asp-controller="Dashboard" asp-action="Index" style="margin-bottom:10px; margin-top:10px;">
                <label style="font-size:20px; font-weight:500;" for="timeSaveData">Thời gian mỗi lần lưu bản ghi (&#62;2): </label>
                <input id="timeSaveData" required name="timeSaveData" style="width:150px;" placeholder="@ViewBag.timeSaveData giây" type="number" />
                <button class="btn btn-success">Thay đổi</button>
            </form>
            <table class="table table-hover table_thongso">
                <thead>
                    <tr>
                        <th scope="col">Tên TS</th>
                        <th scope="col">QCVN 40:2011/BTNMT</th>
                        <th scope="col">Giá trị đo</th>
                        <th scope="col">Đơn vị</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="row">pH</td>
                        <td>5:9</td>
                        <td id="pH">0</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td scope="row">Temp</td>
                        <td> &lt; 40 </td>
                        <td id="Temp">0</td>
                        <td>&#186;C</td>
                    </tr>
                    <tr>
                        <td scope="row">TSS</td>
                        <td>100</td>
                        <td id="TSS">0</td>
                        <td>mg/L</td>
                    </tr>
                    <tr>
                        <td scope="row">COD</td>
                        <td>150</td>
                        <td id="COD">0</td>
                        <td>mg/L</td>
                    </tr>
                    <tr>
                        <td scope="row">NH4</td>
                        <td></td>
                        <td id="NH4">0</td>
                        <td></td>
                    </tr>
                </tbody>
            </table>


            <div class="box_reset" style="margin-top:7px; margin-bottom:25px;">
                <button type="button" class="btn btn-primary" id="btn_dopH" style="width:100px; margin-right:20px;">Đo pH</button>
                <button type="button" class="btn btn-primary" id="btn_doCOD" style="width:100px; margin-right:20px;">Đo COD</button>
                <button type="button" class="btn btn-primary" id="btn_doTSS" style="width:100px;  margin-right:20px;">Đo TSS</button>
                <button type="button" class="btn btn-primary" id="btn_doNH4" style="width:100px;  margin-right:20px;">Đo NH4</button>
            </div>
        </div>



        <div class="col-12 col-xl-6 tabRight">
            <div class="tuLayMau">
                <h2 style="text-align: center;">
                    Tủ lấy mẫu
                </h2>

                <div class="text-danger" id="message_error_tulaymau"></div>

                @*DB17*@
                <div style="font-size:17.5px; font-weight:600;">DB17</div>
                <div class="box_number_father">
                    <span id="status_position_DB17_1" class="box_number">1</span>
                    <span id="status_position_DB17_2" class="box_number">2</span>
                    <span id="status_position_DB17_3" class="box_number">3</span>
                    <span id="status_position_DB17_4" class="box_number">4</span>
