                <div style="margin-bottom:5px; margin-top:25px;">
                    <label style="font-size:17px; font-weight:600;" for="input_nhap_so_chai_lay_mau">Nhập vị trí chai lấy mẫu: </label>
                    <input id="input_nhap_so_chai_lay_mau" style="width:150px;" placeholder="1-24" type="number" />
                </div>
                <div style="margin-bottom:5px;">
                    <div class="text-success" style="font-size:16px; font-weight:500;" id="position_current_text_batdau"></div>
                    <div class="text-info" style="font-size:16px; font-weight:500;" id="position_current_text_laymau"></div>
                    <div class="text-danger" style="font-size:16px; font-weight:500;" id="position_current_text_luu"></div>

                </div>
                <div class="box_reset" style="margin-top:15px;">
                    <button type="button" class="btn btn-success" id="btn_batdau" style="margin-right:20px;">Bắt đầu</button>
                    <button type="button" class="btn btn-info" id="btn_laymau" style="margin-right:20px;">Lấy mẫu</button>
                    <button type="button" class="btn btn-warning" id="btn_tudong">Tắt tự động</button>
                </div>
                <div class="box_reset" style="margin-top:15px;">
                    <input type="number" class="readonly_input" readonly id="input_luu" style="margin-right:5px;" />
                    <button type="button" class="btn btn-success" style="margin-right:20px;" id="btn_luu">Lưu</button>
                </div>
                <div class="box_reset" style="margin-top:8px;">
                    <select id="input_xoa" style="width:205px; height:30px; margin-right:5px;" class="form-select" aria-label="Default select example">
                    </select>
                    <button type="button" class="btn btn-danger" style="margin-right:20px;" id="btn_xoa">Xóa</button>
                </div>
            </div>



            <div class="separate" style="background-color: black; width: 100%; height: 1px;"></div>





            <div class="luuLuong">
                <h2 style="text-align: center;">
                    Lưu lượng
                </h2>


                <div class="text-danger" id="message_error_luuluong"></div>



                <div class="box_luuLuongra">
                    <label for="input_luuluongvao">Lưu lượng vào (m3/h)</label>
                    <input class="readonly_input" readonly style="width:300px;" type="text" id="input_luuluongvao" placeholder="m3/h">
                    <button class="btn btn-primary" id="btn_doluuluongvao" type="button" style="padding-left:20px; padding-right:20px; margin-top:10px; margin-bottom:10px;">Đo lưu lượng vào</button>
                    <label for="input_luuluongra">Lưu lượng ra (m3/h)</label>
                    <input class="readonly_input" readonly style="width:300px;" type="text" id="input_luuluongra" placeholder="m3/h">
                    <button class="btn btn-primary" id="btn_doluuluongra" type="button" style="padding-left:20px; padding-right:20px; margin-top:10px; margin-bottom:10px;">Đo lưu lượng ra</button>
                </div>

                <div style="width:100%;display: flex;justify-content: center;">
                    <div style="background-color: rgba(0, 0, 0, 0.3); width: 65%;height: 1px;"></div>
                </div>

                <div class="box_luuLuongvao" style="margin-top:15px;">
                    <label for="input_tongluuluong">Tổng lưu lượng (m3)</label>
                    <input class="readonly_input" readonly style="width:300px;" type="text" id="input_tongluuluong" placeholder="m3">
                    <button class="btn btn-primary" id="btn_doluuluongtong" type="button" style="padding-left:20px; padding-right:20px; margin-top:10px;">Đo lưu lượng tổng</button>
                </div>
            </div>
        </div>
    </div>
</div>
