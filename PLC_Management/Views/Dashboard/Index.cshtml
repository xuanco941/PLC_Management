                <div class="box_number_father">
                    <span id="status_position_DB17_17" class="box_number">17</span>
                    <span id="status_position_DB17_18" class="box_number">18</span>
                    <span id="status_position_DB17_19" class="box_number">19</span>
                    <span id="status_position_DB17_20" class="box_number">20</span>
                    <span id="status_position_DB17_21" class="box_number">21</span>
                    <span id="status_position_DB17_22" class="box_number">22</span>
                    <span id="status_position_DB17_23" class="box_number">23</span>
